@model WMBA_7_2_.ViewModels.TeamVM

@{
    ViewData["Title"] = "Team Create";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <h1 class="text-center mb-4">Create Team</h1>
            <hr />

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="TeamName" class="form-label">Team Name</label>
                    <input asp-for="TeamName" class="form-control" />
                    <span asp-validation-for="TeamName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SelectedPlayerID" class="form-label">Select Players</label>
                    <select asp-for="SelectedPlayerID" class="form-select" asp-items="ViewBag.PlayerID" multiple="multiple"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="CoachID" class="form-label">Coach</label>
                    <select asp-for="CoachID" class="form-select" asp-items="ViewBag.CoachID"></select>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary" style="margin-top:5px;">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}