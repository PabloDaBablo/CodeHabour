@model IEnumerable<WMBA_7_2_.Models.Team>

@{
    ViewData["Title"] = "Teams";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>

<div class="container my-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-3">Teams</h1>
            <p>
                <a class="btn btn-primary" asp-action="Create">Create New</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().TeamName)</th>
                            <th>Players</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Coach.CoachName)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.TeamName)</td>
                                <td>
                                    @foreach (var player in item.Players)
                                    {
                                        @Html.DisplayFor(modelItem => player.PlayerFullName)<br />
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Coach.CoachName)</td>
                                <td>
                                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ID">Details</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>