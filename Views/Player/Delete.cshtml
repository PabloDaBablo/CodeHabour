@model WMBA_7_2_.Models.Player

@{
    ViewData["Title"] = "Player Delete";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <h1 class="text-center mb-4">Delete Player</h1>
            <h3 class="text-center mb-4">Are you sure you want to delete this?</h3>
            <hr />

            <dl class="row">
                <dt class="col-sm-4">Player Member ID</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PlayerMemberID)</dd>

                <dt class="col-sm-4">First Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PlayerFirstName)</dd>

                <dt class="col-sm-4">Last Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PlayerLastName)</dd>

                <dt class="col-sm-4">Player Number</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PlayerNumber)</dd>
            </dl>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>
</div>