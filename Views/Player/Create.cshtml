@model WMBA_7_2_.Models.Player

@{
    ViewData["Title"] = "Player Create";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <h1 class="text-center mb-4">Create Player</h1>
            <hr />

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="PlayerMemberID" class="form-label">Player Member ID</label>
                    <input asp-for="PlayerMemberID" class="form-control" />
                    <span asp-validation-for="PlayerMemberID" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PlayerFirstName" class="form-label">First Name</label>
                    <input asp-for="PlayerFirstName" class="form-control" />
                    <span asp-validation-for="PlayerFirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PlayerLastName" class="form-label">Last Name</label>
                    <input asp-for="PlayerLastName" class="form-control" />
                    <span asp-validation-for="PlayerLastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PlayerNumber" class="form-label">Player Number</label>
                    <input asp-for="PlayerNumber" class="form-control" />
                    <span asp-validation-for="PlayerNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="TeamID" class="form-label">Team</label>
                    <select asp-for="TeamID" class="form-select" asp-items="ViewBag.TeamID"></select>
                    <span asp-validation-for="TeamID" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary" style="margin-top:5px;">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}