@model WMBA_7_2_.Models.Game

@{
    ViewData["Title"] = "Edit";
}

<head>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>

<h4>Reschedule Game</h4>
*Required Field
<hr />
<div class="row">
    <div class="form-group required">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="GameDate" class="control-label"></label>
                <input asp-for="GameDate" class="form-control" />
                <span asp-validation-for="GameDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameTime" class="control-label"></label>
                <input asp-for="GameTime" class="form-control" />
                <span asp-validation-for="GameTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeamID" class="control-label"></label>
                <input asp-for="HomeTeamID" class="form-control" readonly />
                <span asp-validation-for="HomeTeamID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamID" class="control-label"></label>
                <input asp-for="AwayTeamID" class="form-control" readonly />
                <span asp-validation-for="AwayTeamID" class="text-danger"></span>
            </div>

            @* <div class="form-group">
                <label asp-for="GameSeason" class="control-label"></label>
                <input asp-for="GameSeason" class="form-control" />
                <span asp-validation-for="GameSeason" class="text-danger"></span>
            </div> *@
            @* <div class="form-group">
                <label asp-for="GameLocation" class="control-label"></label>
                <input asp-for="GameLocation" class="form-control" />
                <span asp-validation-for="GameLocation" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="GameLocation" class="control-label"></label>
                <select asp-for="GameLocation" id="GameLocation" class="form-select" asp-items="Html.GetEnumSelectList<Ballparks>()"></select>
                <span asp-validation-for="GameLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-action="Index" asp-controller="Home">Back to Dashboard</a>
    <a class="btn btn-danger" asp-action="Index">Back to Schedule</a>
    @* <a asp-action="Index">Back to Schedule</a> *@
</div>

