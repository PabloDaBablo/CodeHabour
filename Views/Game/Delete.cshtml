@model WMBA_7_2_.Models.Game

@{
    ViewData["Title"] = "Delete";
}
<head>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>

<h4>Cancel Game</h4>

<h5>Are you sure you want to Cancel this game?</h5>
<div>
    
    <hr />
    <dl class="row">
        <dt class=" col-lg-10">
            @Html.DisplayNameFor(model => model.GameDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameDate)
        </dd>
        <dt class="col-lg-10">
            @Html.DisplayNameFor(model => model.GameTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameTime)
        </dd>
        <dt class="col-lg-10">
            @Html.DisplayNameFor(model => model.HomeTeamID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomeTeam.TeamName)
        </dd>
        <dt class="col-lg-10">
            @Html.DisplayNameFor(model => model.AwayTeamID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AwayTeam.TeamName)
        </dd>
        <dt class="col-lg-10">
            @Html.DisplayNameFor(model => model.GameLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameLocation)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Cancel" class="btn btn-danger" />  
        <a asp-action="Index">Back to Schedule</a>
    </form>
</div>
