@model WMBA_7_2_.Models.Game

@{
    ViewData["Title"] = "Create";
}
<head>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>
<h4>Schedule a Game</h4>
*Required Field
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<hr />
<div class="row">
    <div class="form-group required">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameDate" class="control-label"></label>
                <input asp-for="GameDate" class="form-control" />
                <span asp-validation-for="GameDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameTime" class="control-label"></label>
                <input asp-for="GameTime" class="form-control" />
                <span asp-validation-for="GameTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeamID" class="control-label"></label>
                <select asp-for="HomeTeamID" id="HomeTeam" class="form-select" asp-items="ViewBag.HomeTeam"></select>
                <span asp-validation-for="HomeTeamID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamID" class="control-label"></label>
                <select asp-for="AwayTeamID"  id="AwayTeam" class="form-select" asp-items="ViewBag.AwayTeam"></select>
                <span asp-validation-for="AwayTeamID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameLocation" class="control-label"></label>
                <select asp-for="GameLocation" id="GameLocation" class="form-select" asp-items="Html.GetEnumSelectList<Ballparks>()"></select>
                <span asp-validation-for="GameLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-action="Index">Back to Schedule</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
