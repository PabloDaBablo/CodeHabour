@model WMBA_7_2_.ViewModels.CoachViewModel

@{
	ViewData["Title"] = "Coach List";
}

<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>

<h3>@ViewData["Title"]</h3>
<hr />

<div class="d-flex align-items-center">
	<button class="btn btn-primary mb-2 mr-2" id="btnAdd">Add Coach</button>
	<a href="/" class="btn btn-danger mb-2 mr-2" style="margin-left: 5px;">Back to Home</a>
</div>


<div class="container">
	<table class="table table-striped table-bordered table-responsive table-hover">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(model => model.CoachName)</th>
				<th>@Html.DisplayNameFor(model => model.CoachNumber)</th>
				<th>@Html.DisplayNameFor(model => model.CoachPosition)</th>
				<th>Team</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody id="tblBody">
		</tbody>
	</table>
</div>

<div class="modal" id="CoachModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h3 class="modal-title" id="modalTitle"></h3>
			</div>
			<div class="modal-body">
				<input type="hidden" asp-for="ID" value="0" />
				<div class="mb-2">
					<label asp-for=CoachMemberID></label>
					<input type="text" asp-for="CoachMemberID" class="form-control"
						   placeholder="Ex.  1234ASD" />
					<span asp-validation-for="CoachMemberID" class="text-danger"></span>
					<div id="CoachMemberIDError" class="invalid-feedback"></div>

				</div>
				<div class="mb-2">
					<label asp-for=CoachName></label>
					<input type="text" asp-for="CoachName" class="form-control"
						   placeholder="Ex. John Doe" />
					<span asp-validation-for="CoachName" class="text-danger"></span>
					<div id="CoachNameError" class="invalid-feedback"></div>
				</div>
				<div class="mb-2">
					<label asp-for=CoachNumber></label>
					<input type="text" asp-for="CoachNumber" class="form-control"
						   placeholder="Ex. 99" />
					<span asp-validation-for="CoachNumber" class="text-danger"></span>
					<div id="CoachNumberError" class="invalid-feedback"></div>
				</div>
				<div class="mb-2">
					<label asp-for=CoachPosition></label>
					<input type="text" asp-for="CoachPosition" class="form-control"
						   placeholder="Ex. Head Coach" />
					<span asp-validation-for="CoachPosition" class="text-danger"></span>
					<div id="CoachPositionError" class="invalid-feedback"></div>
				</div>
				<div class="mb-2">
					<label asp-for="TeamCoach" class="form-label">Team</label>
					<select asp-for="SelectedTeamIds" id="TeamCoach" class="form-select" asp-items="@ViewBag.TeamCoaches" multiple="multiple" name="SelectedTeamIds"></select>
					<span asp-validation-for="TeamCoach" class="text-danger"></span>
				</div>

			</div>
			<div class="modal-footer">
				<button class="btn btn-primary" id="Save" type="submit"
						onclick="Insert();">
					Save
				</button>
				<button class="btn btn-success" style="display:none" id="Update" type="submit"
						onclick="Update();">
					Update
				</button>
				<button class="btn btn-danger" data-dismiss="modal"
						onclick="HideModal();">
					Close
				</button>
			</div>
		</div>
	</div>
</div<
<a href="~/lib/jquery/dist/jquery.min.map">~/lib/jquery/dist/jquery.min.map</a>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/.min.js"></script>
<script src="~/js/coachmodal.js"></script>