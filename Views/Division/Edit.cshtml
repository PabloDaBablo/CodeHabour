@model WMBA_7_2_.Models.Division

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>


<h1>Edit</h1>

<h4>Division</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="DivAge" class="control-label">Division &#42</label>
                <input asp-for="DivAge" class="form-control" />
                <span asp-validation-for="DivAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeagueTypeID" class="form-label">League &#42</label>
                <select asp-for="LeagueTypeID" class="form-select" asp-items="@ViewData["LeagueTypeID"] as SelectList"></select>
                <span asp-validation-for="LeagueTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary  mb-2 mr-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/" class="btn btn-danger" >Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
