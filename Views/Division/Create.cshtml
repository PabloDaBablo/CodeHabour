@model WMBA_7_2_.Models.Division

@{
    ViewData["Title"] = "Create";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>



<h1>Create</h1>

<h4>Division</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DivAge" class="control-label"></label>
                <input asp-for="DivAge" class="form-control" />
                <span asp-validation-for="DivAge" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="LeagueTypeID" class="form-label">League</label>
                <select asp-for="LeagueTypeID" class="form-select" asp-items="@ViewData["LeagueTypeID"] as SelectList"></select>
                <span asp-validation-for="LeagueTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/" class="btn btn-danger" >Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
