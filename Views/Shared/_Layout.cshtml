<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WMBA_7_2_</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/Index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WMBA_7_2_.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="page-container">
        <header class="header">
            <nav class="navbar navbar-light">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <img src="/Images/logo-text.svg" alt="Logo" class="img-fluid logo-text">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Desktop Navigation -->
                @* <div class="navbar-nav-desktop">
                <button class="custom-btn desktop-btn" onclick="location.href='@Url.Action("Index", "Home")'">Home</button>
                <button class="custom-btn desktop-btn" onclick="location.href='@Url.Action("Index", "PlayerModal")'">Players</button>
                <button class="custom-btn desktop-btn" onclick="location.href='@Url.Action("Index", "Team")'">Team</button>
                <button class="custom-btn desktop-btn" onclick="location.href='@Url.Action("Index", "Game")'">Game</button>
                <button class="custom-btn desktop-btn" onclick="location.href='@Url.Action("Index", "ScoreSheet")'">Score Sheet</button>
                <button class="custom-btn desktop-btn" onclick="location.href='@Url.Action("Index", "Report")'">Excel Data</button>
                <button class="custom-btn desktop-btn" onclick="location.href='@Url.Action("Index", "TeamModal")'">Teams</button>
                </div> *@

                <!-- Offcanvas Menu for Mobile -->
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasMenuLabel">Menu</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <!-- Mobile Navigation -->
                        <ul class="navbar-nav">
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "PlayerModal")">Players</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "TeamModal")">Team</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Game")">Schedule</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Report")">Data</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="top-bar">
            <ul class="navbar-nav-desktop">
                <li class="nav-item bar-item"><a class="nav-link nav-link-spacing" href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="nav-item bar-item"><a class="nav-link nav-link-spacing" href="@Url.Action("Index", "PlayerModal")">Players</a></li>
                <li class="nav-item bar-item"><a class="nav-link nav-link-spacing" href="@Url.Action("Index", "TeamModal")">Teams</a></li>
                <li class="nav-item bar-item"><a class="nav-link nav-link-spacing" href="@Url.Action("Index", "Game")">Schedule</a></li>
                <li class="nav-item bar-item"><a class="nav-link nav-link-spacing" href="@Url.Action("Index", "Report")">Data</a></li>
            </ul>
        </div>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container" style="color:white">
            &copy; 2024 - Welland Minor Baseball Association
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../wwwroot/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/44b9581dbb.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>